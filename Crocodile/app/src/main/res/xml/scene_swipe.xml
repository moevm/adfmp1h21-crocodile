<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/rest">

        <Constraint
            android:id="@id/card"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="@+id/motionLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7"/>

        <Constraint android:id="@+id/passIndicator">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />

            <PropertySet android:alpha="1" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/correct"
        app:deriveConstraintsFrom="@+id/rest">

        <Constraint
            android:id="@id/card"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@+id/motionLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/pass"
        app:deriveConstraintsFrom="@id/rest">

        <Constraint
            android:id="@id/card"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="@+id/motionLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <Constraint android:id="@+id/passIndicator">
            <Layout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="150dp"
                app:layout_constraintBottom_toBottomOf="@id/card"
                app:layout_constraintEnd_toEndOf="@id/card"
                app:layout_constraintStart_toStartOf="@id/card"
                app:layout_constraintTop_toTopOf="@id/card" />

            <Transform
                android:scaleX="1"
                android:scaleY="1" />

            <PropertySet android:alpha="1" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/offScreenPass">

        <Constraint
            android:id="@id/card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/motionLayout"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/offScreenCorrect">

        <Constraint
            android:id="@id/card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/motionLayout"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintWidth_percent="0.7" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/correct"
        app:constraintSetStart="@+id/rest"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/card"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/card" />
    </Transition>

    <Transition
        app:constraintSetEnd="@+id/pass"
        app:constraintSetStart="@+id/rest"
        app:duration="300">

        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@+id/card"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/card" />
    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenPass"
        app:constraintSetStart="@+id/pass"
        app:duration="150" />

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenCorrect"
        app:constraintSetStart="@+id/correct"
        app:duration="150" />

</MotionScene>