<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_score">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/go_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="@string/score"
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/back_button"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/fst_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="маугли"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/score_label"
            android:layout_toStartOf="@+id/vs"/>

        <ImageView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vs"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/score_label"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/snd_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="атомные самураи"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/score_label"
            android:layout_toEndOf="@+id/vs"/>

        <TextView
            android:id="@+id/fst_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/vs"
            android:layout_toStartOf="@+id/colon"/>

        <TextView
            android:id="@+id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text=":"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/vs"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/snd_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/vs"
            android:layout_toEndOf="@+id/vs"/>

        <TextView
            android:id="@+id/round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="@string/round"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginTop="150dp"
            android:layout_below="@+id/vs"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/play_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scada_italic"
            android:gravity="center"
            android:text="@string/play_team"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/round"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/team_name_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="@string/team_name_round"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/play_team"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/button"
            android:fontFamily="@font/seymour_one"
            android:text="@string/play"
            android:textColor="#000000"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>