<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_score">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <Button
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="@drawable/go_back"
            android:layout_weight="3"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/score_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/seymour_one"
            android:text="@string/score"
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_weight="12"/>

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/fst_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/seymour_one"
                android:gravity="right"
                android:text="маугли"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/vs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                app:srcCompat="@drawable/vs" />

            <TextView
                android:id="@+id/snd_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="40"
                android:fontFamily="@font/seymour_one"
                android:gravity="left"
                android:text="самураи"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fst_team_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/seymour_one"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="0"
                android:textColor="#000000"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/colon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:fontFamily="@font/seymour_one"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textColor="#000000"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/snd_team_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:fontFamily="@font/seymour_one"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="0"
                android:textColor="#000000"
                android:textSize="40sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/round"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/seymour_one"
            android:text="@string/round"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_weight="20"/>

        <TextView
            android:id="@+id/play_team"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/scada_italic"
            android:text="@string/play_team"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/team_name_round"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="top"
            android:fontFamily="@font/seymour_one"
            android:text="@string/team_name_round"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_weight="23"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:fontFamily="@font/seymour_one"
            android:text="@string/play"
            android:textColor="#000000"
            android:layout_weight="8"
            android:padding="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>