<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_swipe"
    app:motionDebug="SHOW_ALL"
    android:background="@drawable/background_play">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/play_team_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="@string/team_name_round"
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/guessed"
            android:ems="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:fontFamily="@font/seymour_one"
            android:gravity="center_horizontal"
            android:text="@string/guessed"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/missed"
            android:ems="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:fontFamily="@font/seymour_one"
            android:gravity="center_horizontal"
            android:text="@string/missed"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:gravity="center"
            android:text="00:59"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_below="@+id/play_team_label"
            android:layout_centerHorizontal="true"/>

        <FrameLayout
            android:id="@+id/cards_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_word_card"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/time"
            android:layout_alignBottom="@+id/score_team"
            android:layout_marginBottom="80dp">

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/motionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutDescription="@xml/scene_swipe">

                <ImageView
                    android:id="@+id/passIndicator"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/circle"/>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/card"
                    android:layout_margin="5dp"
                    card_view:cardBackgroundColor="#BFCE82"
                    card_view:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/word"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/seymour_one"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">
                        </TextView>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.motion.widget.MotionLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/score_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seymour_one"
            android:text="@string/score_team"
            android:textSize="25sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>